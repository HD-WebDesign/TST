<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TST | Luke Smith</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,900italic,900,700,500' rel='stylesheet' type='text/css'>
    <link href="~/Content/MegaTron.css" rel="stylesheet" />


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ticket Support Tracker", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Lead Manager", "Index", "Leads")</li>
                    <li>@Html.ActionLink("Service Manager", "Index", "Services")</li>
                    <li>@Html.ActionLink("Lead Form", "Index", "MiniView")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="full-width">
        <div class="">
            @RenderBody()
        </div>
        <footer class="text-muted navbar-inverse">
            <div class="">
                <div class="row">
                    <div class="col col-md-4 text-center">

                        Connect With Us<br />
                        <a href="httP://www.facebook.com/hdentertainmentkc" class="text-muted" data-toggle="tooltip" title="Connect With Us On Facebook" data-placement="bottom"><i class="fa fa-facebook-square fa-3x"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="#" class="text-muted" data-toggle="tooltip" title="Connect With the Owner On LinkedIn" data-placement="bottom"><i class="fa fa-linkedin-square fa-3x"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="#" class="text-muted" data-toggle="tooltip" title="Go to our Youtube channel" data-placement="bottom"><i class="fa fa-youtube-square fa-3x"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="#" class="text-muted" data-toggle="tooltip" title="Listen to a mix on mixcloud" data-placement="bottom"><i class="fa fa-mixcloud fa-3x"></i></a><br />

                    </div>
                    <div class="col col-md-4 text-center bottom">

                        <a href="#" class="text-muted" data-toggle="tooltip" title="Login Portal For Existing Team Members" data-placement="bottom">Login Portal</a>&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="col col-md-4 text-center">
                        <div>
                            <h4 class="text-muted"><a href="#" class="text-muted" target="_blank" data-toggle="tooltip" title="Go To Our Blog">Popular Blog Post</a></h4>
                            <a href="#" class="text-muted">This is example text. Do not take it seriously.</a>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col col-md-12 text-center"> &copy; @DateTime.Now.Year -<a href="http://www.livelifehd.net" target="_blank" class="text-danger" data-toggle="tooltip" title="Learn About HD Web Design"> HD Web Design</a></div>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
    </script>
</body>
</html>




  

      



